<h1>New Project</h1>

<%= form_for(@project) do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.label :deadline %>
<%= f.date_field :deadline %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.submit "Create Project" %>
<% end %>

<%= link_to "Go Back", root_path %>
